# JWT Settings
JWT_SECRET_KEY=your-secret-key
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=20160

# Database Settings
SQLALCHEMY_DATABASE_URL=sqlite:///./tarot.db
# For PostgreSQL:
# SQLALCHEMY_DATABASE_URL=postgresql://username:password@host:port/database

# OpenAI Settings
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4o-mini
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=800

# Email Settings
MAIL_USERNAME=your-email@example.com
MAIL_PASSWORD=your-email-password
MAIL_FROM=your-email@example.com
MAIL_PORT=587
MAIL_SERVER=smtp.gmail.com
MAIL_FROM_NAME=Tarot Reader
MAIL_STARTTLS=True
MAIL_SSL_TLS=False
USE_CREDENTIALS=True
VALIDATE_CERTS=True

# Celery Settings
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/1
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_TIMEZONE=UTC
CELERY_ENABLE_UTC=True

# Redis Settings
REDIS_URL=redis://redis:6379/2
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=1

# Telegram Settings
# Leave empty to disable Telegram error alerts (no alerts will be sent)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id

# Environment
# Set to 'local' to enable the /health/test-500 endpoint for testing
# Use 'development' or 'production' for other environments
FASTAPI_ENV=local

# Image Upload (Legacy - IMGBB)
IMGBB_API_KEY=your-imgbb-api-key

# Cloudflare R2 Configuration
CLOUDFLARE_R2_ACCOUNT_ID=your_account_id
CLOUDFLARE_R2_ACCESS_KEY_ID=your_access_key
CLOUDFLARE_R2_SECRET_ACCESS_KEY=your_secret_key
CLOUDFLARE_R2_BUCKET_NAME=tarot-images
CLOUDFLARE_R2_CUSTOM_DOMAIN=images.yourdomain.com

# Image CDN URL (replaces IMGBB)
IMAGE_CDN_URL=https://images.yourdomain.com

# Database Configuration
DATABASE_URL=sqlite:///./tarot.db

# JWT Configuration
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Email Configuration
SMTP_TLS=True
SMTP_PORT=587
SMTP_HOST=smtp.gmail.com
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Lemon Squeezy Configuration (Required for subscription features)
LEMON_SQUEEZY_API_KEY=your_lemon_squeezy_api_key_here
LEMON_SQUEEZY_STORE_ID=your_store_id_here
LEMON_SQUEEZY_WEBHOOK_SECRET=your_webhook_secret_here
LEMON_SQUEEZY_PRODUCT_ID_10_TURNS=your_10_turns_product_id_here
LEMON_SQUEEZY_PRODUCT_ID_20_TURNS=your_20_turns_product_id_here

# For MetaMask
ETHEREUM_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_API_KEY_HERE
ETHEREUM_PAYMENT_ADDRESS=your-payment-address-here

# Slack Configuration (Required for support system)
# IMPORTANT: Your Slack Bot Token must have the following OAuth scopes:
# - files:write (required for file uploads to Slack)
# - chat:write (required for sending messages to channels)
# Without these scopes, file uploads will fail but support tickets will still be created
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/T0000000000/B0000000000/XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
SLACK_BOT_TOKEN=xoxb-0000000000000-0000000000000-XXXXXXXXXXXXXXXXXXXXXXXX
SLACK_CHANNEL=#support
